    body
        div
            
            include profile.pug
            .col.col-md-5.col-lg-10.col-xl-100.align-items-center(style='margin-left:10%')
                form(action='/addfood', method='POST', name='addfood', enctype='multipart/form-data' style="margin-top:100px")
                    .form-row
                        .form-group.col-md-6
                            label FoodName
                            input.form-control(type='text', placeholder='FoodName', name='foodname', required='required')
                        .form-group.col-md-6
                            label Price
                            input.form-control(type='numer', placeholder='price', name='price', required='required')
                    .form-group
                        label Kitchen
                        input.form-control(type='text', placeholder='Kitchen', name='kitchen', required='required')
                    .form-group
                        label Serves
                        input.form-control(type='number', placeholder='no.of Serves', name='serves', required='required')
                    .form-group
                        label Remarks
                        input.form-control(type='text', placeholder='remarks', name='remarks', required='required')
                    .form-group
                        label Address
                        input.form-control(type='text', placeholder='Location', name='location', required='required')
                    .form-group
                        input(type='radio', name='delivery', value='takeaway')
                        label(for='delivery') TakeAway
                        input(type='radio', name='delivery', value='homedelivery')
                        label(for='delivery') HomeDelivery
                    .form-group
                        input(type='file', placeholder='Upload Food image', name='foodpic', required='')
                    .form-group    
                        button.btn.btn-primary(type='submit') Addfood