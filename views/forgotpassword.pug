
html
  head 
        title ForgotPassword
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css')
        script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')
  body
    section.vh-100.gradient-custom
      .container.py-5.h-100
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-12.col-md-8.col-lg-6.col-xl-5
            .card.bg-dark.text-white(style='border-radius: 1rem;')
              .card-body.p-5.text-center
                .mb-md-5.mt-md-4.pb-5
                  form#login-form.form(action='/sendpasscode', method='post')
                    p.text-white-50.mb-5 Enter your Email Address and last remembered password!
                    .form-outline.form-white.mb-4
                        input#typeEmailX.form-control.form-control-lg(type='text', name='email', placeholder='Email!')
                        label.form-label(for='typeEmailX') Email
                    .form-outline.form-white.mb-4
                        input#typePasswordX.form-control.form-control-lg(type='password' name='password', placeholder='Last remembered Password')
                        label.form-label(for='typePasswordX') 
                    button.btn.btn-outline-light.btn-lg.px-5(type='submit') Send passcode
                    .d-flex.justify-content-center.text-center.mt-4.pt-1
                        a.text-white(href='#!')
                        i.fab.fa-facebook-f.fa-lg
                        a.text-white(href='#!')
                        i.fab.fa-twitter.fa-lg.mx-4.px-2
                        a.text-white(href='#!')
                        i.fab.fa-google.fa-lg
                    div
                    p.mb-0
                        | Don&apos;t have an account? 
                        a.text-white-50.fw-bold(href='/login') Sign In
                    p.text-white-50.mt-3 #{message}