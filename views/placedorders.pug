html 
    head 
        title Placed Orders
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css')
        script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')
        
    body
        div   
            include navbar.pug
            div 
                each item,index in fooditems
                    .card.mb-3(style='max-width: 800px;margin-left:auto;margin-right:auto;margin-top:100px;')
                        .row.g-0
                            .col-md-4
                                img.img-fluid.rounded-start(src=item.image, alt='...' style='margin-left:10px;margin-top:10px;margin-bottom:10px;width:100%;height: 18vw;object-fit:fill;')
                            .col-md-8
                                .card-body
                                form(action="/removefromplaced" method="POST" name="place")
                                        input(type="hidden",name="foodid", value=item.id)
                                        h2.card-title Name : #{item.name}
                                        p.card-text Kitchen : #{item.kitchen}
                                        p.card-text Serves : #{item.serves}
                                        p.card-text Remarks :  #{item.remarks}
                                        p.card-text location :  #{item.location}
                                        p.card-text price :  #{item.price}
                                        p.card-text delivery :  #{item.delivery}
                                        button.btn.btn-info(type='submit') DeleteItem
            h1 #{message}
